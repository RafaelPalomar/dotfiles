# focus or send to desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# swap the current node and the biggest node
super + g
    bspc node -s biggest

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# move/resize
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Terminal
super + apostrophe
  kitty

# Editor
super + e
    emacsclient -c -e '(progn (persp-switch (generate-new-buffer-name "workspace")) (dashboard-open))'

# Make the current window floating
super + s
    bspc node -t floating

# Make the current window tiled
super + t
    bspc node -t tiled

# Toggle fullscreen
super + f
	  bspc node -t "~fullscreen"

# Set the window state
super + {t,shift + t,s}
	  bspc node -t {tiled,pseudo_tiled,floating}

# Restart bspwm
super + Escape
    bspc wm -r

# Launch rofi
super + d
     rofi -show drun -modi drun

# Restart XOrg
super + alt + BackSpace
    pkill Xorg

# Reload sxhkd
alt + shift + r
	pkill -USR1 -x sxhkd

# Quit/Restart BSPWM
control + alt + {q,r}
	bspc {quit 1, wm -r}

# close and kill
super + {_,shift + }q
    bspc node -{c,k}

super + n
      $TERMINAL --class TermApp,TermApp --title nmtui --command nmtui

# Multimedia keys
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
  # pactl -- set-sink-volume 0 +5%

# Still mu√∏ltimedia
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
  # pactl -- set-sink-volume 0 -5%

# still
XF86AudioMute
  amixer -D pulse sset Master toggle-mute

# Brightness up
XF86MonBrightnessUp
  light -A 10

# And brightness down
XF86MonBrightnessDown
  light -U 10

super + a
	alacritty --class TermApp,TermApp --title pulsemixer --command pulsemixer

# Screenshot
Print
    ~/.local/bin/screenshot.sh

# Define the available layouts
set $layouts us es no
set $layoutIndex 0

# Rotate between layouts with Super + Space
super + space
    ~/.local/bin/kb-layout-next.sh

super + w
    ~/.local/bin/set-wallpaper.sh $(find ~/Pictures/Wallpapers -type f | rofi -dmenu -p "Select wallpaper")

# Screen locker
super + l
    slock

# DataLocker - Lock encrypted USB
super + shift + l
    ~/.local/bin/datalocker-lock