# msmtp configuration for multiple accounts with OAuth2
# Uses mutt_oauth2.py for authentication

# Set default values for all accounts
defaults
auth            xoauth2
tls             on
tls_starttls    on
tls_force_sslv3 on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.cache/msmtp.log

# NTNU account
account        ntnu
host           smtp.office365.com
port           587
from           rafael.palomar@ntnu.no
user           rafaelp@ntnu.no
passwordeval   mutt_oauth2.py ~/.password-store/email/ntnu.no.gpg

# OUS-Research account (UiO credentials)
account        ous
host           smtp.office365.com
port           587
from           rafael.palomar@ous-research.no
user           rafaelpa@uio.no
passwordeval   mutt_oauth2.py ~/.password-store/email/uio.no.gpg

# Set default account
account default : ous
